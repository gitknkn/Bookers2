<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse">
	<div class="container">
		<div class ="row">
		<div class = "col-xs-10">
		<div class="navbar-left">
		<span class="text-muted">Bookers</span>
		</div>
		<div class="collapse navbar-collapse" id="navbarEexample7">
		  <div class="navbar-right">
			<ul class="nav navbar-nav ">
      <% if user_signed_in? %>
				<li><span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to 'Home', user_path(current_user.id) %></span></li>
				<li><span class="glyphicon glyphicon-user user" aria-hidden="true"><%= link_to 'Users', users_path %></span></li>
				<li><span class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to 'Books', books_path %></span></li>
        <li><span class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to 'logout', destroy_user_session_path, method: :delete %></span></li>
      <% else %>
        <li><span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to 'Home', root_path %></span></li>
				<li><span class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to 'About', home_about_path %></li>
				<li><span class="glyphicon glyphicon-edit sign_up" aria-hidden="true"><%= link_to 'sign up', new_user_registration_path %></span></li>
				<li><span class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to 'login', new_user_session_path %></span></li>
      <% end %>
			</ul>
		</div>
		</div>
		</div>	
		</div>
	</div>
</nav>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

    <%= yield %>
</body>
<footer>
<div class = "container">
	<div class ="row">
		<div class = "col-xs-3 col-xs-offset-9">
		<p class="text-right">CopyRight Infratop.inc</p>
</footer>
		</div>
	</div>
</div>
</html>
