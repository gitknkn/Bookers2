<h2>投稿フォーム</h2>

<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>


<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <ul>
  <% end %>
<% end %>


<%= form_for(@book) do |f| %>

<p> タイトル </p>
<%= f.text_field :title %>

<p> 本文 </p>
<%= f.text_area :body %>

<%= f.submit %>

<% end %> 


<% @books.each do |f| %>

<p><%= f.title %></p>
<p><%= f.body %></p>

<% end %>

