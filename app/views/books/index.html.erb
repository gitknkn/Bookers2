<body>
<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>

<h2> User info </h2>
<div class="container">
  <div class="row">
    <div class="col-xs-3 ">
    <div class="profile-container">
      <table>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, size:'100x100', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
          </tr>
          <tr>
            <th>name</th><td><p class="profile-name"><%= @user.name %></p></td>     
          </tr>
          <tr>
          <th>introduction</th><td><p class="introduction"><%= @user.introduction %></p></td>
          </tr>
          <tr>
          <% if @user.id == current_user.id %>
            <td><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>



      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <p> Title </p>
        <%= f.text_field :title %>

        <p> Opinion </p>
        <%= f.text_area :body %>
        <p><%= f.submit %></p>
      <% end %>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors</h3>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %> 
    </div>

    <table>
    <div class="col-xs-9">
      <th>Title</th>
      <th>Opinion</th>

      <h2>Books</h2>
      <% @books.each do |f| %>
        <tr>
        <td>
        <%= link_to (f.user) do %>
        <%= attachment_image_tag f.user, :profile_image, size: '100x100', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        <% end %>
        </td>
        <td><%= link_to f.title, book_path(f.id) %></td>
        <td><%= f.body %></td>
        </tr>
      <% end %>
     </div>
    </table>
    </div>
  </div>
</div>
</body>

