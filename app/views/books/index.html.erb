<h2>投稿フォーム</h2>

<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>

<%= form_for(@book) do |f| %>

<p> タイトル </p>
<%= f.text_field :title %>

<p> 本文 </p>
<%= f.text_area :body %>
<%= f.submit %>

<% end %> 

<% if @book.errors.any? %>
  <h3><%= @book.errors.count %>errors</h3>
<% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
<% end %> 


<% @books.each do |f| %>

<p><%= f.title %></p>
<p><%= f.body %></p>

<%= link_to "詳細", book_path(f.id) %>
<% end %>

